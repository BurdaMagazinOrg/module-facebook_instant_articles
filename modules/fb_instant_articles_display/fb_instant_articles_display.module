      $element = fb_instant_articles_display_field_format_analytics_element($items, $settings);
      break;

    case 'fbia_video_formatter':
      $element = fb_instant_articles_display_field_format_video_element($items, $settings);
      break;

    case 'fbia_image_formatter':
      $element = fb_instant_articles_display_field_format_image_element($items, $settings);
